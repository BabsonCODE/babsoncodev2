<body>
<div id="wrapper">
<!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
            	<li style="height:6%;">
            	<center>
            		<div class = "profile_img"><img src="{{imageUrl}}"></div>
            		</center>
            	</li>
                <li class="sidebar-brand">
                    <a href="/dash_home" class="home">
                        H O M E
                    </a>
                </li>
                <hr class = 'line'>
                <li class="sidebar-brand">
                    <a href="/lead_vis_raw" class="current">P R O F I L E</a>
                </li>
                <li class="sidebar-brand">
                    <a href="/lead_vis_top_bottom">P R O J E C T S</a>
                </li>
                <li class="sidebar-brand">
                    <a href="/lead_vis" class = "">H A C K A T H O N S</a>
                </li>
                 <li class="sidebar-brand">
                    <a href="/lead_vis" class = "">C O N T R A C T S</a>
                </li>
            </ul>
        </div>

       
      

<!-- Large modal -->
<center>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Add a Project</button>
</center>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <form method="post">
      <div class="form-group">
     <label for="name">Project Name</label>
   	 <input type="text" class="form-control" name="nameInput">
      </div>
      <div class="form-group">
     <label for="name">Description</label>
   	 <input type="text" class="form-control" name="descriptionInput">
      </div>
       <div class="form-group">
     <label for="name">ImageUrl</label>
   	 <input type="text" class="form-control" name="imageInput">
      </div>
      <button type="submit">Submit Project</button>
      </form>
    </div>
  </div>
</div>

{{#each projects}}
<div class="col-md-12"><pre>
<h2>{{name}}</h2>
<p>Project Creator {{projectCreator.name}}</p>
<p>{{description}}</p>
<img src="{{imageUrl}}" style="width: 50%">
</pre></div>
{{/each}}
</div>
</body>